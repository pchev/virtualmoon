#
#   Makefile.fpc for virtualmoon
#

[package]
name=virtualmoon
version=6

[target]
dirs=virtualmoon datlun photlun weblun cclun

[require]
libc=y
packages=rtl

[prerules]
PREFIX=%PREFIX%

[rules]
.PHONY: all

all: virtualmoon_all datlun_all photlun_all weblun_all cclun_all

ifeq ($(OS_TARGET),win32)
install: 
	.\install.cmd $(PREFIX)
uninstall: 
	.\uninstall.cmd $(PREFIX)
else
ifeq ($(OS_TARGET),win64)
install: 
	.\install.cmd $(PREFIX)
uninstall: 
	.\uninstall.cmd $(PREFIX)
else
ifeq ($(OS_TARGET),darwin)
install: 
	./install_darwin.sh $(PREFIX)
install_update:
        ./install_darwin_update.sh $(PREFIX)
install_data:
	./install_darwin_data.sh $(PREFIX) 
install_data2:
	./install_darwin_data2.sh $(PREFIX) 
install_data3:
	./install_darwin_data3.sh $(PREFIX) 
install_data4:
	./install_darwin_data4.sh $(PREFIX) 
uninstall: 
	./uninstall_darwin.sh $(PREFIX)
else
install: 
	./install.sh $(PREFIX)
install_update: 
	./install_update.sh $(PREFIX)
install_data:
	./install_data.sh $(PREFIX) 
install_data2:
	./install_data2.sh $(PREFIX) 
install_data3:
	./install_data3.sh $(PREFIX) 
install_data4:
	./install_data4.sh $(PREFIX) 
install_win: 
	./install_win.sh win32 $(PREFIX)
install_win_update: 
	./install_win_update.sh win32 $(PREFIX)
install_win64: 
	./install_win.sh win64 $(PREFIX)
install_win64_update: 
	./install_win_update.sh win64 $(PREFIX)
install_win_data:
	./install_win_data.sh $(PREFIX)
install_win_data2:
	./install_win_data2.sh $(PREFIX)
install_win_data3:
	./install_win_data3.sh $(PREFIX)
install_win_data4:
	./install_win_data4.sh $(PREFIX)
uninstall: 
	./uninstall.sh $(PREFIX)
uninstall_win: 
	./uninstall_win.sh $(PREFIX)
uninstall_win64: 
	./uninstall_win.sh $(PREFIX)
endif
endif
endif
